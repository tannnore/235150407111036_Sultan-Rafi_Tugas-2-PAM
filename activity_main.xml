<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F3F3F3"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="end|center_vertical"
        android:maxLength="12"
        android:padding="10dp"
        android:text="0"
        android:textColor="@android:color/black"
        android:textSize="48sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="4"
        android:rowCount="5">

        <Button android:id="@+id/btnClear" android:text="C" style="@style/CalculatorButton.Operator"/>
        <Button android:id="@+id/btnDivide" android:text="/" style="@style/CalculatorButton.Operator"/>
        <Button android:id="@+id/btnMultiply" android:text="*" style="@style/CalculatorButton.Operator"/>
        <Button android:id="@+id/btnAdd" android:text="+" style="@style/CalculatorButton.Operator"/>

        <Button android:id="@+id/btn7" android:text="7" style="@style/CalculatorButton"/>
        <Button android:id="@+id/btn8" android:text="8" style="@style/CalculatorButton"/>
        <Button android:id="@+id/btn9" android:text="9" style="@style/CalculatorButton"/>
        <Button android:id="@+id/btnSubtract" android:text="-" style="@style/CalculatorButton.Operator"/>

        <Button android:id="@+id/btn4" android:text="4" style="@style/CalculatorButton"/>
        <Button android:id="@+id/btn5" android:text="5" style="@style/CalculatorButton"/>
        <Button android:id="@+id/btn6" android:text="6" style="@style/CalculatorButton"/>
        <Button android:id="@+id/btnEquals" android:text="=" android:layout_rowSpan="2" android:layout_gravity="fill" style="@style/CalculatorButton.Equal"/>

        <Button android:id="@+id/btn1" android:text="1" style="@style/CalculatorButton"/>
        <Button android:id="@+id/btn2" android:text="2" style="@style/CalculatorButton"/>
        <Button android:id="@+id/btn3" android:text="3" style="@style/CalculatorButton"/>

        <Button android:id="@+id/btn0" android:text="0" android:layout_columnSpan="3" android:layout_gravity="fill" style="@style/CalculatorButton"/>

    </GridLayout>
</LinearLayout>